<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- product.template : inherit views -->
    <record id="view_product_form_muti_location" model="ir.ui.view">
        <field name="name">view.product.form.muti.location</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <field name="categ_id" position="after">
                <field name="location_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True}"/>
            </field>

        </field>
    </record>

</odoo>