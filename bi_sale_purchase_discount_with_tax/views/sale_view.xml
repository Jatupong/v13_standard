        <record id="view_order_invoice_discount_form" model="ir.ui.view">
             <field name="name">sale.order.invoice.discount.form.view</field>
             <field name="model">sale.order</field>
             <field name="inherit_id" ref="sale.view_order_form" />
             <field name="arch" type="xml">

                 <button name="action_cancel" position="after">
                     <button name="update_discount_button" type="object" string="Update Discount" groups="base.group_no_one"/>
                 </button>

                <field name="payment_term_id" position="after">
                    <field name="discount_apply_type" widget="radio" />
                </field>

                <xpath expr="//group[@name='sale_total']" position="after">
                    <group attrs="{'invisible': [('discount_apply_type','=','line')]}">
                        <field name="tax_discount_policy"/>
                        <label for="discount_type" attrs="{'invisible': [('discount_apply_type','=','line')]}"/>
                        <div>
                            <field name="discount_type" class="oe_inline" attrs="{'invisible': [('discount_apply_type','=','line')]}"/>
                        </div>
                         <label for="discount_value" attrs="{'invisible': [('discount_apply_type','=','line')]}"/>
                        <div>
                            <field name="discount_value" class="oe_inline" attrs="{'invisible': [('discount_apply_type','=','line')]}"/>
                            <label for="discount_value" string="%%" attrs="{'invisible': [('discount_type', '!=', 'Percentage')]}" class="oe_inline"/>
                         </div>
                    </group>
                </xpath>

                <field name="amount_tax" position="before">
                    <field name="discounted_amount" widget="monetary" options="{'currency_field': 'currency_id'}" attrs="{'invisible': [('discount_apply_type','=','line')]}"/>

                    <field name="discount_amt_line" widget="monetary" options="{'currency_field': 'currency_id'}" attrs="{'invisible': [('discount_apply_type','=','global')]}"/>
                </field>


