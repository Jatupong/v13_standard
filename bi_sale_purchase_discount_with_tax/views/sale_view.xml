        <record id="view_account_invoice_discount_form" model="ir.ui.view">
            <field name="name">account.invoice.discount.form.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                
                <field name="company_id" position="after">
                    <field name="discount_apply_type" widget="radio" attrs="{'readonly': [('state', '=', 'posted')]}"/>
                    <field name="is_line" invisible='1'/>
                     <field name="flag" invisible='1'/>
                </field>
                
                <field name="narration" position="before">
                    <group style="width: 65%%">
                        <field name="tax_discount_policy"/>
                        <label for="discount_type" attrs="{'invisible': [('discount_apply_type','=','line')]}"/>
                        <div>
                            <field name="discount_type" class="oe_inline" attrs="{'invisible': [('discount_apply_type','=','line')],'readonly': [('state', '=', 'posted')]}"/>
                        </div>
                         <label for="discount_value" attrs="{'invisible': [('discount_apply_type','=','line')]}"/>
                        <div>
                            <field name="discount_value" class="oe_inline" attrs="{'invisible': [('discount_apply_type','=','line')],'readonly': [('state', '=', 'posted')]}"/>
                            <label for="discount_value" string="%%"
                                attrs="{'invisible': ['|',('discount_type', '!=', 'Percentage'),('discount_apply_type','!=','global')]}" class="oe_inline"/>
                           <button name="calc_discount"  string="(Apply)" type="object"
                                class="oe_edit_only oe_link"
                                attrs="{'invisible':['|',('state','not in',('draft','sent')),('discount_apply_type','=','line')]}"/>
                         </div>
                   </group>
                </field>
                <xpath expr="//group[@class='oe_subtotal_footer']/field[@name='amount_untaxed']" position="after">
                        <field name="discounted_amount" widget="monetary" options="{'currency_field': 'currency_id'}" attrs="{'invisible': [('discount_apply_type','=','line')]}"/>
                        <field name="discount_amt_line" widget="monetary" options="{'currency_field': 'currency_id'}" attrs="{'invisible': [('discount_apply_type','=','global')]}"/>
                        <field name="discount_amount_line"  invisible="1"/>

                </xpath>
                
