<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_discount_inherit" inherit_id="account.report_invoice_document">
            <xpath
                    expr="//div[@class='clearfix']"
                    position="replace">
                <div class="clearfix">
                    <div id="total" class="row">
                        <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                            <table class="table table-sm">
                                <t t-if="not o.discount_value">
                                    <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                        <td>
                                            <strong>Subtotal</strong>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.amount_untaxed"/>
                                        </td>
                                    </tr>
                                    <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                        <tr style="border-bottom:1px solid #dddddd;">
                                            <t t-if="len(o.tax_ids) == 1 and o.amount_untaxed == amount_by_group[2]">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="amount_by_group[3]"/>
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                    <span>&amp;nbsp;
                                                        <span>on</span>
                                                        <t t-esc="amount_by_group[4]"/>
                                                    </span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="amount_by_group[3]"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr class="border-black">
                                        <td>
                                            <strong>Total</strong>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="o.discount_value">
                                    <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                        <td>
                                            <strong>Amount Before Discount</strong>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.amount_untaxed"/>
                                        </td>
                                    </tr>
                                    <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                        <td>
                                            <strong>Discount Type</strong>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.discount_type_id"/>
                                        </td>
                                    </tr>
                                    <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                        <td>
                                            <strong>Invoice Discount</strong>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.discount_value"/>
                                        </td>
                                    </tr>
                                    <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                        <td>
                                            <strong>Amount After Discount</strong>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.amount_after_discount"/>
                                        </td>
                                    </tr>


                                </t>
                            </table>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
