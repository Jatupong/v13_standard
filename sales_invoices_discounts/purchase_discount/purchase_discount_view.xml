<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="invoice_purchase_discount_sale">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='notes']" position="before">
                        <group>
                            <field name="discount_view"/>
                            <field name="discount_type" attrs="{'required':[('discount_view', '!=', False)],}"/>
                            <field name="discount_value" attrs="{'required':[('discount_view', '!=', False)],'invisible':[('discount_type', 'not in', ['Fixed', 'Percentage'])]}"/>
                        </group>
                    </xpath>
                    <xpath expr="//field[@name='amount_tax']" position="after">
                        <field name="discounted_amount" widget="monetary" options="{'currency_field': 'currency_id'}"
                               attrs="{'invisible':[('discount_view', '!=', 'After Tax')]}"/>
                    </xpath>
                    <xpath expr="//field[@name='amount_tax']" position="before">
                        <field name="discounted_amount" widget="monetary" options="{'currency_field': 'currency_id'}"
                               attrs="{'invisible':[('discount_view', '!=', 'Before Tax')]}"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>