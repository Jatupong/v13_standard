<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- mrp.production : inherit views -->
    <record id="mrp_production_form_view_show_parent_fg" model="ir.ui.view">
        <field name="name">view.mrp.production.show.parent.fg</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="product_parent_fg_id"/>
            </field>
            <button name="action_cancel" position="after">
                <button name="material_request" type="object" string="Material Request" confirm="Are you sure you want to process ?"/>
            </button>

            <div name="button_box" position="inside">
                <button type="object" name="action_view_requisition" class="oe_stat_button" icon="fa-truck" groups="base.group_user" attrs="{'invisible': [('requisition_count', '=', 0)]}">
                    <field name="requisition_count" widget="statinfo" string="Requisition"/>
                </button>
            </div>

        </field>
    </record>

    <record id="mrp_production_tree_view_show_parent_fg" model="ir.ui.view">
        <field name="name">view.mrp.production.tree.show.parent.fg</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="product_parent_fg_id"/>
            </field>
        </field>
    </record>


</odoo>