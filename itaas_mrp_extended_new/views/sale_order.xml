        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <button name="action_view_invoice" position="after">
                <button name="action_view_mo" type="object" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': [('count_mo', '=', 0)]}">
                    <field name="count_mo" widget="statinfo" string="Manufacturing Order"/>
                </button>

            </button>

<!--            <field name="invoice_status" position="after">-->
<!--                <field name="count_mo"/>-->
<!--            </field>-->

        </field>
    </record>

