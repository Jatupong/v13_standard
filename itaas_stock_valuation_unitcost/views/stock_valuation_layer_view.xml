<openerp>
    <data>
        <record id="stock_valuation_layer_form_edit_unit_price" model="ir.ui.view">
            <field name="name">view.stock.valuation.layer</field>
            <field name="model">stock.valuation.layer</field>
            <field name="inherit_id" ref="stock_account.stock_valuation_layer_form"/>
            <field name="arch" type="xml">
                <field name="unit_cost" position="attributes">
                    <attribute name="readonly">0</attribute>
                </field>
                <field name="unit_cost" position="after">
                    <button name="update_unit_cost" string="Update Cost" type="object" groups="account.group_account_manager"/>
                </field>

                <field name="remaining_qty" position="after">
                    <field name="remaining_value"/>
                </field>
            </field>
        </record>

        <record id="stock_valuation_layer_tree_unit_cost" model="ir.ui.view">
            <field name="name">view.stock.valuation.layer.tree</field>
            <field name="model">stock.valuation.layer</field>
            <field name="inherit_id" ref="stock_account.stock_valuation_layer_tree"/>
            <field name="arch" type="xml">
                <field name="value" position="before">
                    <field name="unit_cost"/>
                </field>
            </field>
        </record>




    </data>
</openerp>
