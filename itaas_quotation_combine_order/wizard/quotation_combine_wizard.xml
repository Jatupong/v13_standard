<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_quotation_combine_wizard" model="ir.ui.view">
        <field name="name">Quotation Combine Wizard</field>
        <field name="model">quotation.combine.wizard</field>
        <field name="arch" type="xml">
            <form string="Quotation Combine">
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id" invisible="1"/>
                            <field name="contact" domain="[('parent_id','=',partner_id)]" options="{'no_open': True, 'no_create_edit': True}"/>
                            <field name="company_id" invisible="1"/>
                            <field name="payment_term_id" options="{'no_open': True, 'no_create_edit': True}"/>
                            <field name="date_order"/>
                        </group>
                        <group>
                            <field name="pricelist_id" options="{'no_open': True, 'no_create_edit': True}"/>
                            <field name="analytic_account_id" options="{'no_open': True, 'no_create_edit': True}"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_combine_order" string="Comfirm" type="object"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_quotation_combine_wizard" model="ir.actions.act_window">
        <field name="name">Quotation Combine Order</field>
        <field name="res_model">quotation.combine.wizard</field>
        <field name="target">new</field>
    </record>


</odoo>