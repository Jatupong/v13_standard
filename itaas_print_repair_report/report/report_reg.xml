<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- QWeb Reports for Product -->
        <!--#############################################################################################-->
        <!--repair-->
        <record id="paperformat_A5_repair_order" model="report.paperformat">
            <field name="name">A5_Repair_Order</field>
            <field name="default" eval="False"/>
            <field name="format">A5</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">30</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">25</field>
            <field name="dpi">90</field>
        </record>

        <!--Quotation-->
        <report
                id="repair_order"
                model="repair.order"
                menu="True"
                report_type="qweb-pdf"
                string="ใบรายงาน เอกสารรับ"
                paperformat="paperformat_A5_repair_order"
                name="itaas_print_repair_report.repair_order_id"
                file="itaas_print_repair_report.repair_order_id"
                print_report_name="(object.state in ('draft', 'sent') and 'Repair - %s' % (object.name)) or 'Order - %s' % (object.name)"
        />

        <record id="paperformat_A4_Zero_Margin_project_service" model="report.paperformat">
            <field name="name">A4_Zero_Margin_project_service</field>
            <field name="default" eval="False"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">5</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">10</field>
            <field name="dpi">90</field>
        </record>
        <!--Quotation-->
        <report
                id="project_service_report"
                model="repair.order"
                menu="True"
                report_type="qweb-pdf"
                string="ใบบันทีกการซ่อม"
                paperformat="paperformat_A4_Zero_Margin_project_service"
                name="itaas_print_repair_report.project_service_report_id"
                file="itaas_print_repair_report.project_service_report_id"
                print_report_name="(object.state in ('draft', 'sent') and 'Repair - %s' % (object.name)) or 'Order - %s' % (object.name)"
        />

        <record id="paperformat_A4_five_Margin_delivery_repair" model="report.paperformat">
            <field name="name">A4_five_Margin_delivery_repair</field>
            <field name="default" eval="False"/>
            <field name="format">A5</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">5</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">10</field>
            <field name="dpi">90</field>
        </record>

        <report
                id="delivery_repair_report"
                model="repair.order"
                menu="True"
                report_type="qweb-pdf"
                string="เอกสารรับ/ส่งสินค้า"
                paperformat="paperformat_A4_five_Margin_delivery_repair"
                name="itaas_print_repair_report.delivery_repair_report_id"
                file="itaas_print_repair_report.delivery_repair_report_id"
                print_report_name="(object.state in ('draft', 'sent') and 'Repair - %s' % (object.name)) or 'Order - %s' % (object.name)"
        />

    </data>

</odoo>
