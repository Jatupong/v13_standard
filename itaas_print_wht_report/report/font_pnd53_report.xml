<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_pnd53_id">
            <t t-call="web.basic_layout">

                <t t-set="pnd" t-value="pnd_info"/>
                <div class="page" t-attf-style="background-image:url('/itaas_print_wht_report/static/pnd53.jpg'); background-size:360mm 520mm; width:360mm; height:520mm;">

                    <table width="100%" style="height:750px; font-size: 22px;">
                        <tr>
                            <td width="56%" style="position:relative;">
                                <!--company-->
                                <font style="font-size: 20px;">
                                    <!--company_vat-->
                                    <t t-set="company_vat" t-value="company_id.vat"/>
                                    <t t-if="company_vat">
                                        <span t-if="len(company_vat) &gt; 0" t-esc="company_vat[0]" style="position: absolute;left: 368px; top: 225px;"/>

                                        <span t-if="len(company_vat) &gt; 1" t-esc="company_vat[1]" style="position: absolute;left: 408px; top: 225px;"/>
                                        <span t-if="len(company_vat) &gt; 2" t-esc="company_vat[2]" style="position: absolute;left: 433px; top: 225px;"/>
                                        <span t-if="len(company_vat) &gt; 3" t-esc="company_vat[3]" style="position: absolute;left: 458px; top: 225px;"/>
                                        <span t-if="len(company_vat) &gt; 4" t-esc="company_vat[4]" style="position: absolute;left: 488px; top: 225px;"/>

                                        <span t-if="len(company_vat) &gt; 5" t-esc="company_vat[5]" style="position: absolute;left: 533px; top: 225px;"/>
                                        <span t-if="len(company_vat) &gt; 6" t-esc="company_vat[6]" style="position: absolute;left: 555px; top: 225px;"/>
                                        <span t-if="len(company_vat) &gt; 7" t-esc="company_vat[7]" style="position: absolute;left: 583px; top: 225px;"/>
                                        <span t-if="len(company_vat) &gt; 8" t-esc="company_vat[8]" style="position: absolute;left: 613px; top: 225px;"/>
                                        <span t-if="len(company_vat) &gt; 9" t-esc="company_vat[9]" style="position: absolute;left: 638px; top: 225px;"/>

                                        <span t-if="len(company_vat) &gt; 10" t-esc="company_vat[10]" style="position: absolute;left: 678px;top: 225px;"/>
                                        <span t-if="len(company_vat) &gt; 11" t-esc="company_vat[11]" style="position: absolute;left: 705px;top: 225px;"/>

                                        <span t-if="len(company_vat) &gt; 12" t-esc="company_vat[12]" style="position: absolute;left: 748px;top: 225px;"/>
                                    </t>

                                    <!--company_branch-->
                                    <t t-set="company_branch" t-value="company_id.branch_no"/>
                                    <t t-if="company_branch">
                                        <span t-if="len(company_branch) &gt; 0" t-esc="company_branch[0]" style="position: absolute;left:640px;top: 292px;"/>
                                        <span t-if="len(company_branch) &gt; 1" t-esc="company_branch[1]" style="position: absolute;left:665px;top: 292px;"/>
                                        <span t-if="len(company_branch) &gt; 2" t-esc="company_branch[2]" style="position: absolute;left:690px;top: 292px;"/>
                                        <span t-if="len(company_branch) &gt; 3" t-esc="company_branch[3]" style="position: absolute;left:715px;top: 292px;"/>
                                        <span t-if="len(company_branch) &gt; 4" t-esc="company_branch[4]" style="position: absolute;left:740px;top: 292px;"/>
                                    </t>

                                    <!--company_name-->
                                    <span t-esc="company_id.name" style="position: absolute;left:80px;top: 337px;"/>

                                    <!--company address-->
                                    <span t-esc="company_id.building" style="position: absolute;left:185px; top:377px;"/>
                                    <span t-esc="company_id.roomnumber" style="position: absolute;left:425px; top:377px;"/>
                                    <span t-esc="company_id.floornumber" style="position: absolute;left:525px; top:377px;"/>
                                    <span t-esc="company_id.village" style="position: absolute;left:620px;top: 377px;"/>

                                    <span t-esc="company_id.house_number" style="position: absolute;left:125px; top:415px;"/>
                                    <span t-esc="company_id.moo_number" style="position: absolute;left:350px; top:415px;"/>
                                    <span t-esc="company_id.soi_number" style="position: absolute;left:480px; top:415px;"/>

                                    <span t-esc="company_id.street" style="position: absolute;left:130px; top:448px;"/>
                                    <span t-esc="company_id.street2" style="position: absolute;left:490px; top:448px;"/>

                                    <span t-esc="company_id.city" style="position: absolute;left:190px;top: 488px;"/>
                                    <span t-esc="company_id.state_id.name" style="position: absolute;left:520px;top: 488px;"/>

                                    <t t-set="company_code" t-value="company_id.zip"/>
                                    <t t-if="company_code">
                                        <span t-if="len(company_code) &gt; 0" t-esc="company_code[0]" style="position:absolute; left:190px; top: 522px;"/>
                                        <span t-if="len(company_code) &gt; 1" t-esc="company_code[1]" style="position:absolute; left:215px; top: 522px;"/>
                                        <span t-if="len(company_code) &gt; 2" t-esc="company_code[2]" style="position:absolute; left:245px; top: 522px;"/>
                                        <span t-if="len(company_code) &gt; 3" t-esc="company_code[3]" style="position:absolute; left:270px; top: 522px;"/>
                                        <span t-if="len(company_code) &gt; 4" t-esc="company_code[4]" style="position:absolute; left:295px; top: 522px;"/>
                                    </t>

                                    <span t-esc="company_id.phone" style="position: absolute;left:420px;top: 525px;"/>

                                </font>

                                <t t-set="month" t-value="0"/>
                                <t t-if="date_to">
                                    <t t-set="date" t-value="time.strptime(date_to,'%Y-%m-%d')"/>
                                    <span style="position:absolute; left:690px; top:595px;" t-esc="date.tm_year + 543"/>
                                    <t t-set="month" t-value="date.tm_mon"/>
                                </t>

                                <!--check-->
                                <font style="font-size: 40px;">
                                    <t t-if="month == 1"><span style="position:absolute; top:610px; left:80px;">✓</span></t>
                                    <t t-if="month == 2"><span style="position:absolute; top:650px; left:80px;">✓</span></t>
                                    <t t-if="month == 3"><span style="position:absolute; top:680px; left:80px;">✓</span></t>

                                    <t t-if="month == 4"><span style="position:absolute; top:610px; left:260px;">✓</span></t>
                                    <t t-if="month == 5"><span style="position:absolute; top:650px; left:260px;">✓</span></t>
                                    <t t-if="month == 6"><span style="position:absolute; top:680px; left:260px;">✓</span></t>

                                    <t t-if="month == 7"><span style="position:absolute; top:610px; left:450px;">✓</span></t>
                                    <t t-if="month == 8"><span style="position:absolute; top:650px; left:450px;">✓</span></t>
                                    <t t-if="month == 9"><span style="position:absolute; top:680px; left:450px;">✓</span></t>

                                    <t t-if="month == 10"><span style="position:absolute; top:610px; left:620px;">✓</span></t>
                                    <t t-if="month == 11"><span style="position:absolute; top:650px; left:620px;">✓</span></t>
                                    <t t-if="month == 12"><span style="position:absolute; top:680px; left:620px;">✓</span></t>
                                </font>
                            </td>
                            <td width="44%" style="position:relative; font-size: 22px;">
                                <span style="position: absolute;left:100px;top:275px;">
                                    <font style="font-size: 30px;">✓</font>
                                </span>
                                <!--sent-->
                                <span style="position: absolute;left:80px;top:455px;">
                                    <font style="font-size: 30px;">✓</font>
                                </span>
                            </td>
                        </tr>
                    </table>

                    <div style="font-size: 20px;">
                        <span style="position: absolute;left:640px;top: 765px;">
                            <font style="font-size: 30px;">✓</font>
                        </span>
                        <span t-esc="pnd['total_item']" style="position: absolute;left:1200px;top: 770px;"/>
                        <span t-esc="pnd['total_page']" style="position: absolute;left:1200px;top: 810px;"/>

                        <span t-esc="'{0:,.2f}'.format(float(pnd['total_amount']))" style="position: absolute; right:200px; top:1080px;"/>
                        <span t-esc="'{0:,.2f}'.format(float(pnd['total_wht_amount']))" style="position: absolute; right:200px; top:1120px;"/>
                        <span t-esc="'{0:,.2f}'.format(float(pnd['total_wht_amount']))" style="position: absolute; right:200px; top:1210px;"/>
                    </div>

                </div>

            </t>
        </template>

    </data>
</odoo>