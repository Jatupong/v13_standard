<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_purchase_request_form_project" model="ir.ui.view">
        <field name="name">view_purchase_request_form_project</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form" />
        <field name="arch" type="xml">

            <xpath expr="//field[@name='line_ids']/form/sheet/group/group/field[@name='analytic_account_id']" position="after">
                <field name="project_id" groups="analytic.group_analytic_accounting"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='analytic_account_id']" position="after">
                <field name="project_id" groups="analytic.group_analytic_accounting"/>
            </xpath>

        </field>
    </record>

    <record id="view_purchase_request_line_form_project" model="ir.ui.view">
        <field name="name">view_purchase_request_line_form_project</field>
        <field name="model">purchase.request.line</field>
        <field name="inherit_id" ref="purchase_request.purchase_request_line_form" />
        <field name="arch" type="xml">

            <field name="analytic_account_id" position="after">
                <field name="project_id" attrs="{'readonly': [('request_state', '!=', 'draft')]}" groups="analytic.group_analytic_accounting"/>
            </field>

        </field>
    </record>

</odoo>
