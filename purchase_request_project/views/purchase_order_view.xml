<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_purchase_order_form_project" model="ir.ui.view">
        <field name="name">view_purchase_order_form_project</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">

            <xpath expr="//field[@name='order_line']/tree/field[@name='account_analytic_id']" position="after">
                <field name="project_id" groups="analytic.group_analytic_accounting"/>
            </xpath>

        </field>
    </record>

</odoo>
