<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_material_purchase_requisition_form_number" model="ir.ui.view">
            <field name="name">material.purchase.requisition.form.number</field>
            <field name="model">material.purchase.requisition</field>
            <field name="inherit_id" ref="bi_material_purchase_requisitions.material_purchase_requisition_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='requisition_line_ids']" position="before">
                    <field name="is_number_line" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='requisition_line_ids']/tree/field[@name='product_id']" position="before">
                    <field name="number" string="No."/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
