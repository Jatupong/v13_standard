<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!--product stock count report -->
	<record id="view_stock_count_wizard" model="ir.ui.view">
		<field name="name">Stock Count Report</field>
		<field name="model">stock.count.wizard</field>
		<field name="type">form</field>
		<field name="arch" type="xml">

			<form string="Stock Count Reports">
				<group>
					<group>
						<field name="date_from"/>
						<field name="location_id" domain="[('usage', '=', 'internal')]" string="Warehouse"
							   options="{'no_create': True, 'no_create_edit': True}"/>
					</group>
					<group>
						<field name="date_to" required="1"/>
						<field name="company_id" options="{'no_create': True, 'no_create_edit': True}" invisible="1"/>
					</group>
				</group>
				<group>
					<group>
						<field name="product_form"/>
						<field name="product_code_form"/>
					</group>
					<group>
						<field name="product_to"/>
						<field name="product_code_to"/>
					</group>
				</group>
				<footer>
					<button name="print_pdf_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
					or
					<button string="Cancel" class="oe_link" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>

	<record id="action_stock_count_wizard" model="ir.actions.act_window">
		<field name="name">Stock Count Report</field>
		<field name="res_model">stock.count.wizard</field>
		<field name="type">ir.actions.act_window</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_stock_count_wizard"/>
		<field name="target">new</field>
	</record>

	<menuitem id="menu_action_stock_count_wizard"
			  action="action_stock_count_wizard"
			  name="รายงานสินค้าเพื่อตรวจนับ"
			  parent="stock.menu_warehouse_report"
			  sequence="1"/>
	<menuitem id="menu_action_account_stock_count_wizard"
			  action="action_stock_count_wizard"
			  name="รายงานสินค้าเพื่อตรวจนับ"
			  parent="account.menu_finance_reports"
			  sequence="23"/>


</odoo>
