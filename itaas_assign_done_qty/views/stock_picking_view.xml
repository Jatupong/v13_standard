<odoo>
	<!-- inherit res.company form -->
	<record id="view_picking_form_add_done_qty" model="ir.ui.view">
		<field name="name">stock.picking.form.add.done.qty</field>
		<field name="model">stock.picking</field>
		<field name="inherit_id" ref="stock.view_picking_form"/>
		<field name="arch" type="xml">
			<button name="action_cancel" position="after">
				<button name="assign_done_qty" attrs="{'invisible': [('state', 'not in', ('assigned', 'confirmed'))]}" string="Assign Done QTY" groups="base.group_user" type="object"/>
			</button>
		</field>
	</record>

</odoo>