<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="receipt_report_id" >
        <t t-foreach="docs" t-as="o">
            <t t-call="web.basic_layout">

                <div class="header">
                    <style>
                        @font-face
                        {
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_payment_report/static/THSarabun.ttf") format('opentype');
                        }
                        .font_fam{
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_payment_report/static/THSarabun.ttf") format('opentype');
                        }
                        table.table-bordered{
                        border:1px solid black;
                        width: 100%;
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_payment_report/static/THSarabun.ttf") format('opentype');
                        }
                        table.table-bordered &gt; thead &gt; tr &gt; th{
                        border:1px solid black;
                        padding:3px;
                        }
                        table.table-bordered &gt; thead &gt; tr &gt; td{
                        border:1px solid black;
                        padding:3px;
                        }
                        table.table-bordered &gt; tbody &gt; tr &gt; td{
                        border:1px solid black;
                        padding:3px;
                        height:35px;
                        }
                        table.table-bordered &gt; tfoot &gt; tr &gt; td{
                        border:1px solid black;
                        padding:3px;
                        }
                        table.table-nobordered{
                        margin:0px;
                        width: 100%;
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_payment_report/static/THSarabun.ttf") format('opentype');
                        }
                        table.table-nobordered &gt; thead &gt; tr &gt; th{
                        border:1px solid white;
                        padding:0px;
                        }
                        table.table-nobordered &gt; thead &gt; tr &gt; td{
                        border:1px solid white;
                        padding:0px;
                        }
                        table.table-nobordered &gt; tbody &gt; tr &gt; td{
                        border:1px solid white;
                        padding:0px;
                        }
                        table.table-nobordered &gt; tfoot &gt; tr &gt; td{
                        border:1px solid white;
                        padding:0px;
                        }
                        .td_top{
                        border-top:#000 solid 1px;
                        }
                        .td_left{
                        border-left:#000 solid 1px;
                        }
                        .td_right{
                        border-right:#000 solid 1px;
                        }
                        .td_bott{
                        border-bottom:#000 solid 1px;
                        }
                    </style>

                    <table width="100%" class="font_fam td_bott">
                        <td width="20%" style="vertical-align: middle;">
                            <img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)" style="max-height: 100px; max-width: 150px;"/>
                        </td>
                        <td width="55%" style="vertical-align: middle;">
                            <div style="width:500px; word-wrap: break-word;">
                                <font style="font-size: 22px;">
                                    <B>
                                        <span t-field="o.company_id.name"/>&amp;nbsp;
                                        <t t-if="o.company_id.branch_no == '00000'"><span>(สำนักงานใหญ่)</span></t>
                                        <t t-if="o.company_id.branch_no != '00000'">(<span t-field="o.company_id.branch_no"/>)</t>
                                    </B><br/>
                                    <B>
                                        <span t-field="o.company_id.eng_name"/>&amp;nbsp;
                                        <t t-if="o.company_id.branch_no == '00000'"><span>(HEAD OFFICE)</span><br/></t>
                                        <t t-if="o.company_id.branch_no != '00000'"><span t-field="o.company_id.eng_name"/><br/></t>
                                    </B>

                                </font>
                                <font style="font-size: 20px; line-height:18px;">
                                    <t t-set="company_address" t-value="o.company_id.get_company_full_address()"/>
                                    <span t-esc="' '.join([ address for address in company_address ])"/><br/>
                                    <t t-if="o.company_id.eng_address"><span t-field="o.company_id.eng_address"/><br/></t>
                                    <span t-if="o.company_id.phone">โทรศัพท์&amp;nbsp;<span t-esc="o.company_id.phone"/>&amp;nbsp;</span>
                                    <span t-if="o.company_id.email">อีเมล&amp;nbsp;<span t-esc="o.company_id.email"/>&amp;nbsp;</span>
                                    <span t-if="o.company_id.vat"><br/>เลขประจำตัวผู้เสียภาษีอากร&amp;nbsp;<span t-esc="o.company_id.vat"/>&amp;nbsp;</span>
                                </font>
                            </div>
                        </td>
                        <td width="25%" style="text-align:left; vertical-align: middle;">
                            <div style="text-align:center;">
                                <font style="font-size:20px;">
                                    <strong>ใบเสร็จรับเงิน</strong><br/>
                                    <span>Receipt</span><br/>
                                </font>
                                <font style="font-size: 18px;">
                                    <span>หน้า</span>
                                    <span class="page"/>/<span class="topage"/><br/>
                                </font>
                            </div>
                        </td>
                    </table>

                    <table width="100%" class="font_fam td_bott" style="font-size: 20px; line-height:18px; ">
                        <tr>
                            <td width="15%" style="padding-top:10px;">
                                <span>รหัสลูกค้า<br/>Customer Code</span>
                            </td>
                            <td width="60%" style="padding-top:10px;">
                                <span t-field="o.partner_id.ref"/>
                                <t t-if="o.partner_id.vat">
                                    &amp;nbsp;
                                    <span>เลขประจำตัวผู้เสียภาษีอากร&amp;nbsp;:&amp;nbsp;</span>
                                    <span t-field="o.partner_id.vat"/>
                                </t>
                            </td>
                            <td width="25%" rowspan="3" style="padding-top:10px;">
                                <div style="padding-left:5px;">
                                    <span><B>เลขที่/No</B></span><br/>
                                    <span t-field="o.name"/><br/>
                                    <span><B>วันที่/Date</B></span><br/>
                                    <span t-field="o.payment_date" t-field-options="{&quot;widget&quot;: &quot;date&quot;}"/><br/>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span>ชื่อลูกค้า<br/>Customer Name</span>
                            </td>
                            <td>
                                <span t-field="o.partner_id"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span>ที่อยู่<br/>Address</span>
                            </td>
                            <td>
                                <div style="width:500px; height:60px;">
                                    <t t-set="partner_address" t-value="o.partner_id.get_partner_full_address()"/>
                                    <span t-esc="' '.join([ address for address in partner_address ])"/>
                                </div>
                            </td>
                        </tr>
                    </table>

                    <table width="100%" class="font_fam" style="font-size: 20px; line-height:18px; margin-top:10px;">
                        <tr>
                            <td style="text-align: center">
                                <span><B>จำนวนรายการ</B><br/>No. of Document</span><br/>
                                <t t-if="o.invoice_ids">
                                    <span t-esc="len(o.invoice_ids)"/> &amp;nbsp; รายการ
                                </t>
                                <t t-if="not o.invoice_ids"><br/></t>
                            </td>
                            <td style="text-align: center">
                                <span><B>หมายเหตุ</B><br/>Remark</span><br/>
                                <span t-field="o.remark"/>
                            </td>
                            <td style="text-align: center">
                                <span><B>วันที่</B><br/>PAYMENT DATE</span><br/>
                                <span t-field="o.payment_date" t-field-options="{&quot;widget&quot;: &quot;date&quot;}"/>
                            </td>
                        </tr>
                    </table>

                </div>

                <div class="page">
                    <style>
                        @font-face
                        {
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_payment_report/static/THSarabun.ttf") format('opentype');
                        }
                        .font_fam{
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_payment_report/static/THSarabun.ttf") format('opentype');
                        }
                        table.table-bordered {
                        border:1px solid black;
                        padding:3px;
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_payment_report/static/THSarabun.ttf") format('opentype');
                        }
                        table.table-bordered &gt; thead &gt; tr &gt; th{
                        border:1px solid black;
                        vertical-align: middle;
                        text-align:center;
                        padding:3px;
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_payment_report/static/THSarabun.ttf") format('opentype');
                        }
                        table.table-bordered &gt; tbody &gt; tr &gt; td{
                        border:0px solid White;
                        border-left: 1px solid black;
                        padding:3px;
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_payment_report/static/THSarabun.ttf") format('opentype');
                        }
                        table.table-bordered &gt; tfoot &gt; tr &gt; td{
                        border:1px solid black;
                        padding:3px;
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_payment_report/static/THSarabun.ttf") format('opentype');
                        }

                        table.table-nobordered{
                        margin:0px;
                        width: 100%;
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_payment_report/static/THSarabun.ttf") format('opentype');
                        }
                        table.table-nobordered &gt; thead &gt; tr &gt; th{
                        border:1px solid white;
                        padding:0px;
                        }
                        table.table-nobordered &gt; thead &gt; tr &gt; td{
                        border:1px solid white;
                        padding:0px;
                        }
                        table.table-nobordered &gt; tbody &gt; tr &gt; td{
                        border:1px solid white;
                        padding:0px;
                        }
                        table.table-nobordered &gt; tfoot &gt; tr &gt; td{
                        border:1px solid white;
                        padding:0px;
                        }

                        table.table-bordered-foot {
                        border:1px solid black;
                        padding:5px;
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_payment_report/static/THSarabun.ttf") format('opentype');
                        }
                        table.table-bordered-foot &gt; thead &gt; tr &gt; th{
                        border:1px solid black;
                        padding:5px;
                        vertical-align: middle;
                        text-align:center;
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_payment_report/static/THSarabun.ttf") format('opentype');
                        }
                        table.table-bordered-foot &gt; tbody &gt; tr &gt; td{
                        border:1px solid black;
                        padding:5px;
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_payment_report/static/THSarabun.ttf") format('opentype');
                        }
                        table.table-bordered-foot &gt; tfoot &gt; tr &gt; td{
                        border:1px solid black;
                        padding:5px;
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_payment_report/static/THSarabun.ttf") format('opentype');
                        }
                    </style>

                    <!-- unit is mm --> <!-- max height a4 = 297, deduct margin and bottom 100, 50 and left 147, 30px per line then max = 15 line-->
                    <!--t t-set="max_body_line" t-value="15"-->
                    <!-- header of tbody take 2 new light = 15, then 147 - 15 = 132-->
                    <t t-set="max_body_height" t-value="80"/>
                    <t t-set="new_line_height" t-value="4"/>
                    <t t-set="row_line_height" t-value="5"/> <!--- 30px = 7.9375 mm -->
                    <t t-set="max_line_lenght" t-value="40"/>
                    <!--#############it may reduce to 30 from invoice as 40, due to it has code column-->

                    <t t-set="break_line" t-value="o.get_break_line_invoice(max_body_height,new_line_height,row_line_height,max_line_lenght)"/>
                    <t t-set="start" t-value="0"/>
                    <t t-set="end" t-value="0"/>
                    <t t-foreach="range(0,len(break_line),1)" t-as="x">
                        <table width="100%" class="table table-bordered" style="height:130mm; font-size: 20px; line-height:18px;">
                            <thead>
                                <tr>
                                    <th width="5%" ><span>ลำดับ<br/>No.</span></th>
                                    <th width="30%"><span>รายการใบแจ้งหนี้<br/>INVOICE</span> </th>
                                    <th width="13%"><span>วันที่ออกใบแจ้งหนี้<br/>INVOICE DATE</span> </th>
                                    <th width="13%"><span>กำหนดชำระเงิน<br/>DUE DATE</span> </th>
                                    <th width="13%"><span>จำนวนเงิน<br/>AMOUNT DUE</span> </th>
                                    <th width="13%"><span>จำนวนเงินที่จ่าย<br/>AMOUNT PAID</span> </th>
                                    <th width="13%"><span>คงเหลือ<br/>BALANCE</span> </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="range(start,break_line[x],1)" t-as="y">
                                    <t t-if="(y+1)!=(break_line[x])">
                                        <tr style="height:30px;">
                                            <td align="center">
                                                <span t-esc="y+1"/>
                                            </td>
                                            <td>
                                                <span t-field="o.invoice_ids[y].name"/>
                                            </td>
                                            <td align="center">
                                                <span t-field="o.invoice_ids[y].invoice_date"/>
                                            </td>
                                            <td align="center">
                                                <span t-field="o.invoice_ids[y].invoice_date_due"/>
                                            </td>
                                            <td align="right">
                                                <t t-if="o.invoice_ids[y].amount_total">
                                                    <span t-esc="'{0:,.2f}'.format(abs(float(o.invoice_ids[y].amount_total)))"/>
                                                </t>
                                            </td>
                                            <td align="right">
                                                <span t-esc="o._get_invoice_payment_amount(o.invoice_ids[y])"/>
                                            </td>
                                            <td align="right">
                                                <span t-esc="'{0:,.2f}'.format(abs(float(o.invoice_ids[y].amount_residual)))"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-if="(y+1)==(break_line[x])">
                                        <tr>
                                            <td align="center">
                                                <span t-esc="y+1"/>
                                            </td>
                                            <td>
                                                <span t-field="o.invoice_ids[y].name"/>
                                            </td>
                                            <td align="center">
                                                <span t-field="o.invoice_ids[y].invoice_date"/>
                                            </td>
                                            <td align="center">
                                                <span t-field="o.invoice_ids[y].invoice_date_due"/>
                                            </td>
                                            <td align="right">
                                                <t t-if="o.invoice_ids[y].amount_total">
                                                    <span t-esc="'{0:,.2f}'.format(abs(float(o.invoice_ids[y].amount_total)))"/>
                                                </t>
                                            </td>
                                            <td align="right">
                                                <span t-esc="o._get_invoice_payment_amount(o.invoice_ids[y])"/>
                                            </td>
                                            <td align="right">
                                                <span t-esc="'{0:,.2f}'.format(abs(float(o.invoice_ids[y].amount_residual)))"/>
                                            </td>
                                        </tr>
                                        <t t-set="end" t-value="(break_line[x])"/>
                                    </t>
                                </t>
                                <t t-set="start" t-value="break_line[x]"/>
                                <p style="page-break-after:always;"/>
                            </tbody>
                            <tfoot>
                                <tr style="height:30px;">
                                    <td colspan="4">
                                        <table width="100%" class="table table-nobordered">
                                            <tr>
                                                <td width="10%">
                                                    <t t-if="o.currency_id.name == 'THB'">
                                                        <span>บาท</span><br/><span>Baht</span>
                                                    </t>
                                                    <t t-if="not o.currency_id.name == 'THB'">
                                                        <span t-field="o.currency_id"/>
                                                    </t>
                                                </td>
                                                <td width="90%" align="center" style="vertical-align: middle;">
                                                    <t t-if="end ==(break_line[len(break_line)-1])">
                                                        <t t-if="o.currency_id.name == 'THB'">
                                                            (<span t-esc="o.baht_text(o.amount)"/>)
                                                        </t>
                                                        <t t-if="not o.currency_id.name == 'THB'">
                                                            (<span t-esc="o.num2_words(o.amount)"/>)
                                                        </t>
                                                    </t>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                    <td style="vertical-align: middle;">
                                        <span>จำนวนเงินที่ได้รับ</span><br/>
                                    </td>
                                    <td align="right" style="vertical-align: middle;">
                                        <t t-if="end ==(break_line[len(break_line)-1])">
                                            <t t-if="o.amount">
                                                <span t-esc="'{0:,.2f}'.format(float(o.amount))"/>
                                            </t>
                                        </t>
                                    </td>
                                    <td></td>
                                </tr>

                            </tfoot>
                            <t t-set="start" t-value="break_line[x]"/>
                            <p style="page-break-after:always;"/>
                        </table>

                        <table class="table table-bordered-foot" style="font-size: 20px; line-height:18px;">
                            <tr>
                                <td width="15%" rowspan="5">
                                    <table width="100%" class="table table-nobordered">
                                        <tr style="height:30px;">
                                            <td><span>ชำระโดย</span></td>
                                        </tr>
                                        <tr style="height:30px;">
                                            <td>
                                                <t t-if="o.journal_id.type =='cash'">☑</t>
                                                <t t-else="">☐</t>
                                                <span>&amp;nbsp;เงินสด </span>
                                            </td>
                                        </tr>
                                        <tr style="height:30px;">
                                            <td>
                                                <t t-if="o.journal_id.type =='bank' and not o.journal_id.bank_cheque">☑</t>
                                                <t t-else="">☐</t>
                                                <span>&amp;nbsp;เงินโอน </span>
                                            </td>
                                        </tr>
                                        <tr style="height:30px;">
                                            <td>
                                                <t t-if="o.journal_id.type =='bank' and o.journal_id.bank_cheque">☑</t>
                                                <t t-else="">☐</t>
                                                <span>&amp;nbsp;เช็ค </span>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <td align="center"><span>ธนาคาร</span></td>
                                <td align="center"><span>สาขา</span></td>
                                <td align="center"><span>เลขที่เช็ค/เลขที่บัญชี</span></td>
                                <td align="center"><span>ลงวันที่</span></td>
                                <td align="center"><span>จำนวนเงิน</span></td>
                            </tr>
                            <tr style="height:30px;">
                                <td><span t-field="o.cheque_bank.name"/></td>
                                <td><span t-field="o.cheque_branch"/></td>
                                <td><span t-field="o.cheque_number"/></td>
                                <td><span t-field="o.cheque_date"/></td>
                                <td><span t-if="o.cheque_bank" t-esc="'{0:,.2f}'.format(float(o.amount))"/></td>
                            </tr>
                            <tr style="height:30px;">
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr style="height:30px;">
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                            <td colspan="5" align="center">
                                <span>ในกรณีที่ชำระเป็นเช็ค&amp;nbsp;ใบเสร็จรับเงินฉบับนี้จะสมบูรณ์ก็ต่อเมื่อบริษัทฯ
                                    &amp;nbsp;เรียกเก็บเงินจากธนาคารได้แล้ว
                                </span>
                            </td>
                        </table>
                    </t>
                </div>

                <div class="footer">
                    <style>
                        @font-face
                        {
                        font-family: TH SarabunPSK;
                        src: local('United'), url("/itaas_print_payment_report/static/THSarabun.ttf") format('truetype');
                        }
                        .font_fam{
                        font-family:TH SarabunPSK;
                        src: local('United'), url("/itaas_print_payment_report/static/THSarabun.ttf") format('opentype');
                        }
                        table.table-bordered{
                        border:1px solid black;
                        margin-top:20px;
                        border-collapse: collapse;
                        width: 100%;
                        }
                        table.table-bordered &gt; thead &gt; tr &gt; th{
                        border:1px solid black;
                        border-collapse: collapse;
                        }
                        table.table-bordered &gt; tbody &gt; tr &gt; td{
                        border:1px solid black;
                        border-collapse: collapse;
                        }
                        table.table-bordered &gt; tfoot &gt; tr &gt; td{
                        border:1px solid black;
                        border-collapse: collapse;
                        }
                    </style>

                    <table class="table table-bordered font_fam" style="text-align: center; page-break-inside: avoid; font-size: 20px;">
                        <tr>
                            <td class="col-xs-6" style="text-align: center; line-height:20px;">
                                <br/><br/>
                                <span>__________________________</span><br/><br/>
                                <span>(.................................................)</span><br/>
                                <span>ผู้รับเงิน</span><br/>
                                <span>Received By</span><br/>
                                <span>วันที่........../........../..........</span>
                            </td>
                            <td class="col-xs-6" style="text-align: center; line-height:20px;">
                                <br/><br/>
                                <span>__________________________</span><br/><br/>
                                <span>(.................................................)</span><br/>
                                <span>เจ้าหน้าที่ผู้มีอำนาจ</span><br/>
                                <span>Authorized Signature</span><br/>
                                <span>วันที่........../........../..........</span>
                            </td>
                        </tr>
                    </table>
                    <t t-if="o.company_id.receipt_no_form">
                        <div class="font_fam" style="font-size:18px;">
                            <span t-esc="o.company_id.receipt_no_form"/>
                        </div>
                    </t>
                </div>

            </t>
        </t>
    </template>
</odoo>
