<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- 1 sale.order inherit : views -->
    <record id="view_sale_order_delivery_note_form" model="ir.ui.view">
        <field name="name">sale.order.delivery.note.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//notebook" position="inside">
                <page string="Note for Delivery">
                    <field name="note_for_delivery" placeholder="Note for Delivery"/>
                </page>
            </xpath>

        </field>
    </record>

</odoo>