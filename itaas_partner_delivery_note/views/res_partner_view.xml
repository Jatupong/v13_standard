<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- 1 res.partner inherit : views -->
    <record id="view_partner_delivery_note_form" model="ir.ui.view">
        <field name="name">res.partner.delivery.note.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//notebook" position="inside">
                <page string="Note for Delivery">
                    <field name="note_for_delivery" placeholder="Note for Delivery"/>
                </page>
            </xpath>

        </field>
    </record>

</odoo>