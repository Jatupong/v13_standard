<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form_note" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="payment_term_id" position="after">
                <field name="period_payment_amount"/>
                <field name="period"/>
            </field>
        </field>
    </record>

    <record id="view_quotation_tree_update" model="ir.ui.view">
        <field name="name">sale.order.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='partner_id']" position="before">
                <field name="period_payment_amount"/>
                <field name="period"/>
            </xpath>

            <xpath expr="//tree/field[@name='commitment_date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='expected_date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>

        <record id="view_order_tree_update" model="ir.ui.view">
        <field name="name">sale.order.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//tree/field[@name='commitment_date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='expected_date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>


    <record id="view_order_payment_tree_update" model="ir.ui.view">
        <field name="name">sale.order.payment.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='partner_id']" position="before">
                <field name="period_payment_amount"/>
                <field name="period"/>
            </xpath>
        </field>
    </record>



</odoo>


