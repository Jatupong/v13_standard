<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- delivery.carrier : inherit views -->
    <record id="view_delivery_carrier_form_sale" model="ir.ui.view">
        <field name="name">view.delivery.carrier.form.sale</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">

            <xpath expr="//group[@name='country_details']/field[1]" position="before">
                <field name="district_ids" widget="many2many_tags"/>
            </xpath>

        </field>
    </record>

</odoo>