<odoo>

    <record id="view_res_partner_form_sequence" model="ir.ui.view">
        <field name="name">res.partner.form.sequence</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='ref']" position="before">
                <label for="partner_type"/>
                <div>
                    <field name="partner_type" class="oe_inline" />
                    <button name="set_partner_type" string="Set" type="object" class="oe_edit_only oe_link oe_inline"  groups="base.group_no_one"/>
                </div>
                <field name="customer_rank" groups="base.group_no_one"/>
                <field name="supplier_rank" groups="base.group_no_one"/>
            </xpath>

        </field>
    </record>

</odoo>