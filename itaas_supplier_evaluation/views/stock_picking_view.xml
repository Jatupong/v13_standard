<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_picking_form_evaluation_inherit" model="ir.ui.view">
        <field name="name">stock.picking.form.evaluation.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='note']" position="after">
                <page name="evaluation" string="Evaluation">
                    <button string="Evaluation" name="create_stock_evaluation" type="object" class="oe_edit_only oe_highlight"/>
                    <field name="evaluation_ids">
                        <tree editable="bottom" create="0">
                            <field name="picking_id" invisible="1"/>
                            <field name="purchase_id" invisible="1"/>
                            <field name="partner_id" invisible="1"/>
                            <field name="type_id"/>
                            <field name="date_evaluation"/>
                            <field name="score" readonly="1" force_save="1"/>
                            <field name="score_deduct"/>
                            <field name="score_total"/>
                            <field name="description"/>
                        </tree>
                        <form>
                            <group>
                                <group>
                                    <field name="purchase_id"/>
                                    <field name="date_evaluation"/>
                                    <field name="type_id"/>
                                </group>
                                <group>
                                    <field name="score"/>
                                    <field name="score_total"/>
                                </group>
                                <group colspan="2">
                                    <field name="description"/>
                                </group>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>

        </field>
    </record>

</odoo>
