    <!-- stock.evaluation.report : tree -->
    <record id="stock_evaluation_report_tree" model="ir.ui.view">
        <field name="name">stock.evaluation.report.tree</field>
        <field name="model">stock.evaluation.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="partner_id"/>
            </tree>
        </field>
    </record>

    <record id="stock_evaluation_report_search" model="ir.ui.view">
        <field name="name">stock.evaluation.report.search</field>
        <field name="model">stock.evaluation.report</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Action">
                <field name="partner_id"/>
                <group expand="0" string="Group By">
                    <filter name="group_partner" string="Partner" domain="[]" context="{'group_by':'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- stock.evaluation.report : actions -->
    <record id="action_stock_evaluation_report" model="ir.actions.act_window">
        <field name="name">Vendor Assessment Report</field>
        <field name="res_model">stock.evaluation.report</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"'search_default_group_partner':1}</field>
        <field name="view_id" ref="stock_evaluation_report_tree"/>
        <field name="search_view_id" ref="stock_evaluation_report_search"/>
    </record>

    <!-- stock.evaluation.report : menu-->
    <menuitem id="menu_stock_evaluation_report_range"
              name="Vendor Assessment Report"
              parent="stock.menu_warehouse_report"
              sequence="110"
              action="action_stock_evaluation_report"/>

</odoo>