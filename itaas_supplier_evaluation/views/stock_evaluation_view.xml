<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- stock.evaluation : form -->
    <record id="stock_evaluation_form" model="ir.ui.view">
        <field name="name">stock.evaluation.form</field>
        <field name="model">stock.evaluation</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <group>
                    <group>
                        <field name="partner_id"/>
                        <field name="date_evaluation"/>
                    </group>
                    <group>
                        <field name="picking_id"/>
                        <field name="purchase_id"/>
                    </group>
                    <group>
                        <field name="score" readonly="1" force_save="1"/>
                        <field name="score_deduct"/>
                        <field name="score_total"/>
                    </group>
                    <group colspan="2">
                        <field name="description"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <!-- stock.evaluation : tree -->
    <record id="stock_evaluation_tree" model="ir.ui.view">
        <field name="name">stock.evaluation.tree</field>
        <field name="model">stock.evaluation</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="picking_id"/>
                <field name="purchase_id"/>
                <field name="picking_state"/>
                <field name="type_id"/>
                <field name="date_evaluation"/>
                <field name="score" readonly="1" force_save="1"/>
                <field name="score_deduct"/>
                <field name="score_total"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- stock.evaluation : search -->
    <record id="stock_evaluation_search" model="ir.ui.view">
        <field name="name">stock.evaluation.search</field>
        <field name="model">stock.evaluation</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Action">
                <field name="purchase_id"/>
                <field name="picking_id"/>
                <field name="partner_id"/>
                <group expand="0" string="Group By">
                    <filter name="group_partner" string="Partner" domain="[]" context="{'group_by':'partner_id'}"/>
                    <filter name="group_purchase" string="Purchase" domain="[]" context="{'group_by':'purchase_id'}"/>
                    <filter name="group_picking" string="Picking" domain="[]" context="{'group_by':'picking_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- stock.evaluation : actions -->
    <record id="action_stock_evaluation" model="ir.actions.act_window">
        <field name="name">Stock Evaluation</field>
        <field name="res_model">stock.evaluation</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"'search_default_group_partner':1,'search_default_group_purchase':1,'search_default_group_picking':1}</field>
        <field name="view_id" ref="stock_evaluation_tree"/>
        <field name="search_view_id" ref="stock_evaluation_search"/>
    </record>

    <!-- stock.evaluation : menu -->
    <menuitem id="menu_stock_evaluation"
              name="Vendor Evaluation"
              parent="stock.menu_stock_inventory_control"
              sequence="110"
              action="action_stock_evaluation"/>

    <!-- stock.score.grade : tree view -->
    <record id="view_stock_score_grade_tree" model="ir.ui.view">
        <field name="name">stock.score.grade.tree</field>
        <field name="model">stock.score.grade</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="min_score"/>
                <field name="max_score"/>
                <field name="description"/>
                <field name="result"/>
            </tree>
        </field>
    </record>

    <!-- stock.score.grade : action -->
    <act_window id="action_stock_score_grade"
                name="Score Grade"
                res_model="stock.score.grade"
                view_mode="tree,form"/>

    <!-- stock.score.grade : menu -->
    <menuitem id="menu_stock_score_grade"
              name="Score Grade"
              parent="stock.menu_stock_inventory_control"
              action="action_stock_score_grade"
              sequence="110"
              groups="stock.group_stock_manager"/>

</odoo>