<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_inherit111" model="ir.ui.view">
        <field name="name">account.move.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create' : True}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_create' : True}</attribute>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='account_id']" position="attributes">
                <attribute name="options">{'no_create' : True}</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_create' : True}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_payment_term_id']" position="attributes">
                <attribute name="options">{'no_create' : True}</attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_user_id']" position="attributes">
                <attribute name="options">{'no_create' : True}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_incoterm_id']" position="attributes">
                <attribute name="options">{'no_create' : True}</attribute>
            </xpath>

            <xpath expr="//field[@name='fiscal_position_id']" position="attributes">
                <attribute name="options">{'no_create' : True}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_partner_bank_id']" position="attributes">
                <attribute name="options">{'no_create' : True}</attribute>
            </xpath>





        </field>
    </record>

    <record id="account_move_line_inherit" model="ir.ui.view">
        <field name="name">account.move.line.inherit</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account_followup.view_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='followup_line_id']" position="attributes">
                <attribute name="options">{'no_create' : True}</attribute>
            </xpath>
            <xpath expr="//field[@name='followup_date']" position="attributes">
                <attribute name="options">{'no_create' : True}</attribute>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create' : True}</attribute>
            </xpath>






        </field>
    </record>


</odoo>
