    <record id="view_product_variant_kanban_brand" model="ir.ui.view">
        <field name="name">product variant kanban view: add brand</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_kanban_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_kanban_details')]/strong[1]" position="after">
                <div>
                    <a t-if="record.product_brand_id" type="open">
                        <field name="product_brand_id"/>
                    </a>
                </div>
            </xpath>
        </field>
    </record>

    <record id="view_product_template_tree_brand" model="ir.ui.view">
        <field name="name">product tree view: add brand</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="product_brand_id"/>
                <field name="product_series_id"/>
                <field name="product_model_id"/>
            </field>
            <field name="categ_id" position="after">
                <field name="product_group_id"/>
                <field name="category_id"/>
                <field name="sub_category_id"/>
                <field name="production"/>
            </field>
        </field>
    </record>

    <record id="view_product_variant_tree_brand" model="ir.ui.view">
        <field name="name">product variant tree view: add brand</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="product_brand_id" />
                <field name="product_series_id"/>
                <field name="product_model_id"/>
            </field>
            <field name="categ_id" position="after">
                <field name="product_group_id"/>
                <field name="category_id"/>
                <field name="sub_category_id"/>
                <field name="production"/>
            </field>
        </field>
    </record>

    <record id="view_product_model_form" model="ir.ui.view">
        <field name="name">view.product.model.form</field>
        <field name="model">product.model</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" class="oe_inline"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="series_id"/>
                        </group>
                        <field name="products_count" invisible="1"/>
                        <field name="product_ids" nolabel="1"/>
                        <field name="description" nolabel="1" placeholder="Description..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_product_model">
        <field name="name">Model</field>
        <field name="res_model">product.model</field>
        <!--        <field name="view_type">form</field>-->
        <field name="view_mode">kanban,form,tree</field>
    </record>

    <record model="ir.actions.act_window" id="action_product_series">
        <field name="name">Series</field>
        <field name="res_model">product.series</field>
        <!--        <field name="view_type">form</field>-->
        <field name="view_mode">kanban,form,tree</field>
    </record>


    <record model="ir.actions.act_window" id="action_product_brand">
        <field name="name">Brand</field>
        <field name="res_model">product.brand</field>
        <!--        <field name="view_type">form</field>-->
        <field name="view_mode">kanban,form,tree</field>
    </record>

    <menuitem
            name="Product Brands"
            id="menu_product_brand"
            action="action_product_brand"
            parent="sale.prod_config_main"/>
    <menuitem
            name="Product Series"
            id="menu_product_series"
            action="action_product_series"
            parent="sale.prod_config_main"/>

    <menuitem
            name="Product Model"
            id="menu_product_model"
            action="action_product_model"
            parent="sale.prod_config_main"/>
