    <record id="view_product_template_search_brand" model="ir.ui.view">
        <field name="name">product.template.search.brand</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="product_brand_id"/>
                <field name="product_model_id"/>
                <field name="product_series_id"/>
                <field name="product_group_id"/>
                <field name="category_id"/>
                <field name="sub_category_id"/>
                <filter string="Brand" name="groupby_brand" domain="[]"
                        context="{'group_by' : 'product_brand_id'}"/>
                <filter string="Model" name="groupby_model" domain="[]"
                        context="{'group_by' : 'product_model_id'}"/>
                <filter string="Series" name="groupby_series" domain="[]"
                        context="{'group_by' : 'product_series_id'}"/>

                <filter string="Product Group" name="groupby_product_group" domain="[]"
                        context="{'group_by' : 'product_group_id'}"/>
                <filter string="Category" name="groupby_product_category" domain="[]"
                        context="{'group_by' : 'category_id'}"/>
                <filter string="Sub Category" name="groupby_product_sub_category" domain="[]"
                        context="{'group_by' : 'sub_category_id'}"/>
                <filter string="Production" name="groupby_product_production" domain="[]"
                        context="{'group_by' : 'production'}"/>

                <separator/>

            </field>
            <filter name="categ_id" position="attributes">
                <attribute name="string">Parent Category</attribute>
            </filter>
        </field>
    </record>

    <record id="product_template_form_brand_add" model="ir.ui.view">
        <field name="name">product.template.product.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <field name="sale_ok" position="before">
                <field name="product_brand_id" placeholder="Brand" options="{'no_create': True, 'no_create_edit':True}"/><div/>
                <field name="product_series_id" placeholder="Series" options="{'no_create': True, 'no_create_edit':True}"/><div/>
                <field name="product_model_id" placeholder="Model" options="{'no_create': True, 'no_create_edit':True}"/><div/>
            </field>
            <field name="uom_id" position="before">
                <field name="minimum_sale_price"/>
            </field>
            <field name="categ_id" position="after">
                <field name="production" options="{'no_create': True, 'no_create_edit':True}"/>
                <field name="product_group_id" options="{'no_create': True, 'no_create_edit':True}"/>
                <field name="category_id" options="{'no_create': True, 'no_create_edit':True}"/>
                <field name="sub_category_id" options="{'no_create': True, 'no_create_edit':True}"/>
            </field>
            <field name="categ_id" position="attributes">
                <attribute name="string">Parent Category</attribute>
                <attribute name="options">{'no_create': True, 'no_create_edit':True}</attribute>
            </field>
        </field>
    </record>

