<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="res_users_purchase_type_form_view">
        <field name="name">res.users.purchase.type.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">

            <xpath expr="//sheet/notebook/page[@name='access_rights']/group[1]" position="after">
                <group col="2" modifiers="{}">
                    <separator string="Purchase Order Type" colspan="2" modifiers="{}"/>
                    <field name="purchase_type"/>
                    <newline modifiers="{}"/>
                </group>
            </xpath>

        </field>
    </record>
</odoo>
