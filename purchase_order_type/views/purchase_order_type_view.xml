<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pot_purchase_order_type_form_view" model="ir.ui.view">
        <field name="name">purchase.order.type.form.view</field>
        <field name="model">purchase.order.type</field>
        <field name="arch" type="xml">
            <form string="Type">
                <sheet>
                    <field name="active" invisible="1"/>
                    <div class="oe_button_box" name="button_box"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <group>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                    </group>
                    <group>
                        <group>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                            <field name="sequence_id" />
                            <field name="picking_type_id" />
                        </group>
                        <group>
                            <!--<field name="journal_id" />-->
                            <field name="payment_term_id" />
                            <field name="incoterm_id" />
                        </group>
                    </group>
                    <group>
                        <field name="description" nolabel="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pot_purchase_order_type_tree_view" model="ir.ui.view">
        <field name="name">purchase.order.type.tree.view</field>
        <field name="model">purchase.order.type</field>
        <field name="arch" type="xml">
            <tree string="Type">
                <field name="name"/>
                <field name="sequence_id"/>
            </tree>
        </field>
    </record>

    <record id="pot_purchase_order_type_search_view" model="ir.ui.view">
        <field name="name">purchase.order.type.search.view</field>
        <field name="model">purchase.order.type</field>
        <field name="arch" type="xml">
            <search string="Type">
                <field name="name"/>
                <field name="sequence_id"/>
                <!--<field name="journal_id"/>-->
                <field name="payment_term_id" />
                <field name="incoterm_id" />
                <field name="incoterm_id" />
                <group expand="0" string="Group By">
                    <filter name="entry_sequence" string="Entry Sequence" domain="[]"
                            context="{'group_by':'sequence_id'}" />
                    <filter name="picking_type_id" string="Picking Type" domain="[]"
                            context="{'group_by':'picking_type_id'}" />
                    <!--<filter name="billing_journal" string="Billing Journal" domain="[]"-->
                    <!--        context="{'group_by':'journal_id'}" />-->
                    <filter name="payment_term" string="Payment Term" domain="[]"
                            context="{'group_by':'payment_term_id'}" />
                    <filter name="incoterm" string="Incoterm" domain="[]"
                            context="{'group_by':'incoterm_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="pot_purchase_order_type_action" model="ir.actions.act_window">
        <field name="name">Purchases Order Types</field>
        <field name="res_model">purchase.order.type</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="pot_purchase_order_type_tree_view"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Click to set a new type for purchase order.</p>
        </field>
    </record>

    <record id="pot_purchase_order_type_action_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="pot_purchase_order_type_form_view"/>
        <field name="act_window_id" ref="pot_purchase_order_type_action"/>
    </record>

    <record id="pot_purchase_order_type_action_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="pot_purchase_order_type_tree_view"/>
        <field name="act_window_id" ref="pot_purchase_order_type_action"/>
    </record>

    <menuitem id="pot_purchase_order_type_menu" parent="purchase.menu_purchase_config"
              action="pot_purchase_order_type_action" sequence="20"/>

</odoo>
