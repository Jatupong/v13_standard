<odoo>
    <record id="view_account_move_form_itaas_ontop" model="ir.ui.view">
        <field name="name">account.move.form.itaas.ontop</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='invoice_line_ids']/form/sheet/group/field[@name='discount']" position="after">
                <field name="numbe_text"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']" position="after">
                <field name="numbe_text"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='partner_id']" position="after">
                <field name="numbe_text" invisible="1"/>
            </xpath>



        </field>
    </record>

</odoo>