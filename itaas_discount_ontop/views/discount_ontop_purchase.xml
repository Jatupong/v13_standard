<odoo>

    <record id="view_purchase_order_line_form_itaas_ontop" model="ir.ui.view">
        <field name="name">purchase.order.form.itaas.ontop</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                <field name="discount_ontop1"/>
                <field name="discount_ontop2"/>
                <field name="discount_ontop3"/>
            </xpath>

        </field>
    </record>

</odoo>