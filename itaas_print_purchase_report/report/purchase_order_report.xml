<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="purchase_order_report_id">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.basic_layout">
                <t t-set="amount_untaxed" t-value="o.amount_untaxed"/>
                <t t-set="amount_tax" t-value="o.amount_tax"/>
                <t t-set="amount_total" t-value="o.amount_total"/>

                <t t-if="is_action">
                    <t t-set="show_product_code" t-value="show_product_code_on_purchase"/>
                </t>
                <t t-if="not is_action">
                    <t t-set="show_product_code" t-value="o.show_product_code_on_purchase"/>
                </t>

                <div class="header">
                    <style>
                        @font-face
                        {
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_purchase_report/static/THSarabun.ttf") format('opentype');
                        }
                        .font_fam{
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_purchase_report/static/THSarabun.ttf") format('opentype');
                        }
                        table.table-bordered{
                        border:1px solid black;
                        width: 100%;
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_purchase_report/static/THSarabun.ttf") format('opentype');
                        }
                        table.table-bordered &gt; thead &gt; tr &gt; th{
                        border:1px solid black;
                        padding:3px;
                        }
                        table.table-bordered &gt; thead &gt; tr &gt; td{
                        border:1px solid black;
                        padding:3px;
                        }
                        table.table-bordered &gt; tbody &gt; tr &gt; td{
                        border:1px solid black;
                        padding:3px;
                        height:35px;
                        }
                        table.table-bordered &gt; tfoot &gt; tr &gt; td{
                        border:1px solid black;
                        padding:3px;
                        }
                        table.table-nobordered{
                        margin:0px;
                        width: 100%;
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_purchase_report/static/THSarabun.ttf") format('opentype');
                        }
                        table.table-nobordered &gt; thead &gt; tr &gt; th{
                        border:1px solid white;
                        padding:0px;
                        }
                        table.table-nobordered &gt; thead &gt; tr &gt; td{
                        border:1px solid white;
                        padding:0px;
                        }
                        table.table-nobordered &gt; tbody &gt; tr &gt; td{
                        border:1px solid white;
                        padding:0px;
                        }
                        table.table-nobordered &gt; tfoot &gt; tr &gt; td{
                        border:1px solid white;
                        padding:0px;
                        }
                        .td_top{
                        border-top:#000 solid 1px;
                        }
                        .td_left{
                        border-left:#000 solid 1px;
                        }
                        .td_right{
                        border-right:#000 solid 1px;
                        }
                        .td_bott{
                        border-bottom:#000 solid 1px;
                        }
                    </style>

                    <table width="100%" class="font_fam">
                        <td width="20%" style="vertical-align: middle;">
                            <img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)"
                                 style="height: 100px; width: 150px;"/>
                        </td>
                        <td width="55%" style="vertical-align: middle;">
                            <div style="width:500px; word-wrap: break-word;">
                                <font style="font-size: 22px;">
                                    <B>
                                        <span t-field="o.company_id.name"/>&amp;nbsp;
                                        <t t-if="o.company_id.branch_no == '00000'"><span>(สำนักงานใหญ่)</span></t>
                                        <t t-if="o.company_id.branch_no != '00000'">(<span t-field="o.company_id.branch_no"/>)</t>
                                    </B><br/>
                                    <B>
                                        <span t-field="o.company_id.eng_name"/>&amp;nbsp;
                                        <t t-if="o.company_id.branch_no == '00000'"><span>(Head office)</span><br/></t>
                                        <t t-if="o.company_id.branch_no != '00000'"><span t-field="o.company_id.branch_no"/><br/></t>
                                    </B>
                                </font>
                                <font style="font-size: 20px; line-height:18px;">
                                    <t t-set="company_address" t-value="o.company_id.get_company_full_address()"/>
                                    <span t-esc="' '.join([ address for address in company_address ])"/><br/>
                                    <t t-if="o.company_id.eng_address"><span t-field="o.company_id.eng_address"/><br/></t>
                                    <span t-if="o.company_id.phone">โทรศัพท์&amp;nbsp;<span t-esc="o.company_id.phone"/>&amp;nbsp;</span>
                                    <span t-if="o.company_id.email">อีเมล&amp;nbsp;<span t-esc="o.company_id.email"/>&amp;nbsp;<br/></span>
                                    <span t-if="o.company_id.vat">เลขประจำตัวผู้เสียภาษีอากร&amp;nbsp;<span t-esc="o.company_id.vat"/>&amp;nbsp;</span>
                                </font>
                            </div>
                        </td>
                        <td width="25%" style="text-align:left; vertical-align: middle;">
                            <div style="text-align:center;">
                                <font style="font-size: 20px;">
                                    <strong>ใบสั่งซื้อ</strong><br/>
                                    <span>PURCHASE ORDER</span>
                                </font><br/>
                                <font style="font-size: 18px;">
                                    <span>หน้า</span>
                                    <span class="page"/>/<span class="topage"/><br/>
                                </font>
                            </div>
                        </td>
                    </table>

                    <table width="100%" class="font_fam table table-bordered" style="font-size: 18px; margin-top:10px;">
                        <tr>
                            <td width="63%" rowspan="6">
                                <table width="100%" class="table table-nobordered">
                                    <tr>
                                        <td colspan="2">
                                            <B><span>ชื่อผู้ซื้อ Supplier Name</span></B>
                                            <span t-field="o.partner_id"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2"><B><span>ที่อยู่ Address</span></B></td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">
                                            <div style="line-height:16px; height:55px; width:550px; word-wrap: break-word;">
                                                <t t-set="partner_address" t-value="o.partner_id.get_partner_full_address()"/>
                                                <span t-esc="' '.join([ address for address in partner_address ])"/>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <B><span>โทร/Tel. </span></B>
                                            <t t-if="o.partner_id.phone">
                                                <t t-set="partner_phone" t-value="o.partner_id.phone.split(' ')"/>
                                                <t t-if="partner_phone[0] == '+66'">
                                                    0<span t-esc="' '.join([ phone for phone in partner_phone[1:] ])"/>
                                                </t>
                                                <t t-else="">
                                                    <span t-esc="o.contact_person.phone"/>
                                                </t>
                                            </t>
                                        </td>
                                        <td>
                                            <B><span>แฟกซ์/Fax. </span></B><span t-field="o.partner_id.fax"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">
                                            <B><span>เลขประจำตัวผู้เสียภาษีอากร/Tax ID </span></B>
                                            <span t-field="o.partner_id.vat"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">
                                            <B><span>ผู้ติดต่อ</span></B> <span t-field="o.contact_person"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <B><span>เบอร์โทร </span></B>
                                            <t t-if="o.contact_person.phone">
                                                <t t-set="contact_person_phone" t-value="o.contact_person.phone.split(' ')"/>
                                                <t t-if="contact_person_phone[0] == '+66'">
                                                    0<span t-esc="' '.join([ phone for phone in contact_person_phone[1:] ])"/>
                                                </t>
                                                <t t-else="">
                                                    <span t-esc="o.contact_person.phone"/>
                                                </t>
                                            </t>
                                        </td>
                                        <td>
                                            <B><span>อีเมล </span></B><span t-field="o.contact_person.email"/>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                            <td width="37%" >
                                <B><span>วันที่ Date </span></B>
                                <span t-field="o.date_order" t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <B><span>เลขที่ใบสั่งซื้อ No. </span></B><span t-field="o.name"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <B><span>ผู้ขอซื้อ Purchase Request </span></B><span t-field="o.user_id"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <B><span>กำหนดชำระเงิน Term of Payment</span></B><span t-field="o.payment_term_id"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <B><span>กำหนดส่ง Delivery Plan </span></B><span t-field="o.date_planned" t-options='{"widget": "date"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <B><span>เลขที่อ้างอิง No. </span></B> <span t-field="o.partner_ref"/>
                            </td>
                        </tr>
                    </table>

                </div>

                <div class="page">
                    <style>
                        @font-face
                        {
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_purchase_report/static/THSarabun.ttf") format('opentype');
                        }
                        .font_fam{
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_purchase_report/static/THSarabun.ttf") format('opentype');
                        }
                        table.table-bordered {
                        border:1px solid black;
                        padding:3px;
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_purchase_report/static/THSarabun.ttf") format('opentype');
                        }
                        table.table-bordered &gt; thead &gt; tr &gt; th{
                        border:1px solid black;
                        vertical-align: middle;
                        text-align:center;
                        padding:3px;
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_purchase_report/static/THSarabun.ttf") format('opentype');
                        }
                        table.table-bordered &gt; tbody &gt; tr &gt; td{
                        border:0px solid White;
                        border-left: 1px solid black;
                        padding:3px;
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_purchase_report/static/THSarabun.ttf") format('opentype');
                        }
                        table.table-bordered &gt; tfoot &gt; tr &gt; td{
                        border:1px solid black;
                        padding:3px;
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_purchase_report/static/THSarabun.ttf") format('opentype');
                        }

                        table.table-nobordered{
                        margin:0px;
                        width: 100%;
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_purchase_report/static/THSarabun.ttf") format('opentype');
                        }
                        table.table-nobordered &gt; thead &gt; tr &gt; th{
                        border:1px solid white;
                        padding:0px;
                        }
                        table.table-nobordered &gt; thead &gt; tr &gt; td{
                        border:1px solid white;
                        padding:0px;
                        }
                        table.table-nobordered &gt; tbody &gt; tr &gt; td{
                        border:1px solid white;
                        padding:0px;
                        }
                        table.table-nobordered &gt; tfoot &gt; tr &gt; td{
                        border:1px solid white;
                        padding:0px;
                        }
                    </style>

                    <t t-if="show_product_code">
                        <t t-set="colspan_foot" t-value="5"/>
                        <t t-set="max_line_lenght" t-value="30"/>
                    </t>
                    <t t-if="not show_product_code">
                        <t t-set="colspan_foot" t-value="4"/>
                        <t t-set="max_line_lenght" t-value="40"/>
                    </t>

                    <!-- unit is mm --> <!-- max height a4 = 297, deduct margin and bottom 100, 50 and left 147, 30px per line then max = 15 line-->
                    <!--t t-set="max_body_line" t-value="15"-->
                    <!-- header of tbody take 2 new light = 15, then 147 - 15 = 132-->
                    <t t-set="max_body_height" t-value="112"/>
                    <t t-set="new_line_height" t-value="2"/>
                    <t t-set="row_line_height" t-value="7.94"/> <!--- 30px = 7.9375 mm -->
                    <!--#############it may reduce to 30 from invoice as 40, due to it has code column-->
                    <t t-set="break_line" t-value="o.get_break_line(max_body_height,new_line_height,row_line_height,max_line_lenght)"/>
                    <t t-set="start" t-value="0"/>
                    <t t-set="end" t-value="0"/>

                    <t t-foreach="range(0,len(break_line),1)" t-as="x">
                        <!-->147 plus 5 line of untax, discount, after discount, tax, total = 7.9 * 5 = 40 = 187, remove some space then = 170-->
                        <table width="100%" class="font_fam table table-bordered "
                               style=" height:170mm; font-size: 18px; line-height:16px;">
                            <thead>
                                <tr>
                                    <t t-if="show_product_code">
                                        <th width="5%"><span>ลำดับ<br/>No.</span></th>
                                        <th width="15%"><span>รหัส<br/>Code</span></th>
                                        <th width="30%"><span>รายละเอียดสินค้า<br/>Description</span></th>
                                        <th width="10%"><span>จำนวน<br/>Quantity</span></th>
                                        <th width="10%"><span>หน่วย<br/>Unit</span></th>
                                        <th width="15%" ><span>ราคา/หน่วยละ<br/>Unit Price</span></th>
                                        <th width="15%"><span>จำนวนเงิน<br/>Amount</span></th>
                                    </t>
                                    <t t-if="not show_product_code">
                                        <th width="5%"><span>ลำดับ<br/>No.</span></th>
                                        <th width="45%"><span>รายละเอียดสินค้า<br/>Description</span></th>
                                        <th width="10%"><span>จำนวน<br/>Quantity</span></th>
                                        <th width="10%"><span>หน่วย<br/>Unit</span></th>
                                        <th width="15%" ><span>ราคา/หน่วยละ<br/>Unit Price</span></th>
                                        <th width="15%"><span>จำนวนเงิน<br/>Amount</span></th>
                                    </t>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="range(start,break_line[x],1)" t-as="y">
                                    <t t-if="(y+1)!=(break_line[x])">
                                        <tr style="height:30px;">
                                            <td align="center">
                                                <span t-esc="y+1"/>
                                            </td>
                                            <t t-if="show_product_code">
                                                <td>
                                                    <t t-if="o.order_line[y].product_id.code">
                                                        <span t-field="o.order_line[y].product_id.code"/>
                                                    </t>
                                                    <t t-if="not o.order_line[y].product_id.code">
                                                        <span>-</span>
                                                    </t>
                                                </td>
                                                <td>
                                                    <div class="word_wrap" style="width:250px;">
                                                        <span t-field="o.order_line[y].name"/>
                                                    </div>
                                                </td>
                                            </t>
                                            <t t-if="not show_product_code">
                                                <td>
                                                    <div class="word_wrap" style="width:380px;">
                                                        <span t-field="o.order_line[y].name"/>
                                                    </div>
                                                </td>
                                            </t>
                                            <td align="center">
                                                <span t-esc="'{0:,.0f}'.format(float(o.order_line[y].product_uom_qty))"/>
                                            </td>
                                            <td align="center">
                                                <span t-field="o.order_line[y].product_uom.name"/>
                                            </td>
                                            <td align="right">
                                                <span t-esc="'{0:,.2f}'.format(float(o.order_line[y].price_unit))"/>
                                            </td>
                                            <td align="right" class="td_right">
                                                <span t-esc="'{0:,.2f}'.format(abs(float(o.order_line[y].price_total)))" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-if="(y+1)==(break_line[x])">
                                        <tr>
                                            <td align="center">
                                                <span t-esc="y+1"/>
                                            </td>
                                            <t t-if="show_product_code">
                                                <td>
                                                    <t t-if="o.order_line[y].product_id.code">
                                                        <span t-field="o.order_line[y].product_id.code"/>
                                                    </t>
                                                    <t t-if="not o.order_line[y].product_id.code">
                                                        <span>-</span>
                                                    </t>
                                                </td>
                                                <td>
                                                    <div class="word_wrap" style="width:250px;">
                                                        <span t-field="o.order_line[y].name"/>
                                                    </div>
                                                </td>
                                            </t>
                                            <t t-if="not show_product_code">
                                                <td>
                                                    <div class="word_wrap" style="width:380px;">
                                                        <span t-field="o.order_line[y].name"/>
                                                    </div>
                                                </td>
                                            </t>
                                            <td align="center">
                                                <span t-esc="'{0:,.0f}'.format(float(o.order_line[y].product_uom_qty))"/>
                                            </td>
                                            <td align="center">
                                                <span t-field="o.order_line[y].product_uom.name"/>
                                            </td>
                                            <td align="right">
                                                <span t-esc="'{0:,.2f}'.format(float(o.order_line[y].price_unit))"/>
                                            </td>
                                            <td align="right" class="td_right">
                                                <span t-esc="'{0:,.2f}'.format(abs(float(o.order_line[y].price_total)))" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                                            </td>
                                        </tr>
                                        <t t-set="end" t-value="(break_line[x])"/>
                                    </t>
                                </t>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td t-att-colspan="colspan_foot">
                                        <table width="100%" class="table table-nobordered">
                                            <tr>
                                                <td width="10%">
                                                    <t t-if="o.currency_id.name == 'THB'">
                                                        <span>บาท</span><br/><span>Baht</span>
                                                    </t>
                                                    <t t-if="not o.currency_id.name == 'THB'">
                                                        <span t-field="o.currency_id"/>
                                                    </t>
                                                </td>
                                                <td width="90%" align="center" style="vertical-align: middle;">
                                                    <t t-if="end ==(break_line[len(break_line)-1])">
                                                        (<span t-esc="o.baht_text(o.amount_total)"/>)
                                                    </t>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                    <td style="line-height:14px;"><span>รวม</span><br/><span>Total</span></td>
                                    <td align="right">
                                        <span  t-if="end ==(break_line[len(break_line)-1])" t-esc="'{0:,.2f}'.format(float(o.amount_untaxed))"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td t-att-colspan="colspan_foot" rowspan="4">
                                        <strong>หมายเหตุ/Remark</strong><br/>
                                        <t t-if="end ==(break_line[len(break_line)-1])">
                                            <span t-field="o.notes"/>
                                        </t>
                                    </td>
                                    <td style="line-height:14px;"><span>ส่วนลด</span><br/><span>Discount</span></td>
                                    <td align="right">
                                        <span t-if="end ==(break_line[len(break_line)-1])" t-esc="'{0:,.2f}'.format(float(0))"/>
                                        <!--<span t-if="end ==(break_line[len(break_line)-1])" t-esc="'{0:,.2f}'.format(float(o.discounted_amount))"/>-->
                                    </td>
                                </tr>
                                <tr>
                                    <td style="line-height:14px;"><span>คงเหลือ</span><br/><span>Subtotal</span></td>
                                    <td align="right">
                                        <span t-if="end ==(break_line[len(break_line)-1])" t-esc="'{0:,.2f}'.format(float(o.amount_untaxed))"/>
                                        <!--<span t-if="end ==(break_line[len(break_line)-1])" t-esc="'{0:,.2f}'.format(float(o.amount_total - o.discounted_amount))"/>-->
                                    </td>
                                </tr>
                                <tr>
                                    <td style="line-height:14px;">
                                        <span>ภาษีมูลค่าเพิ่ม </span><br/><span>VAT </span>
                                        <t t-set="tax_line_ids" t-value="o.order_line.mapped('taxes_id')"/>
                                        <t t-if="tax_line_ids">
                                            <span t-esc="'%, '.join(map(lambda x: (str(int(x.amount)) or x.name), tax_line_ids))"/>%
                                        </t>
                                        <t t-if="not tax_line_ids">
                                            <span t-field="o.company_id.standard_tax"/>%
                                        </t>
                                    </td>
                                    <td align="right"><span t-if="end ==(break_line[len(break_line)-1])" t-esc="'{0:,.2f}'.format(float(o.amount_tax))"/></td>
                                </tr>
                                <tr>
                                    <td style="line-height:14px;"><span>ยอดเงินสุทธิ </span><br/><span>Net Total</span></td>
                                    <td align="right"><span t-if="end ==(break_line[len(break_line)-1])" t-esc="'{0:,.2f}'.format(float(o.amount_total))"/></td>
                                </tr>
                            </tfoot>
                        </table>
                        <t t-set="start" t-value="break_line[x]"/>
                        <p style="page-break-after:always;"/>
                    </t>
                </div>

                <div class="footer">
                    <style>
                        @font-face
                        {
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_purchase_report/static/THSarabun.ttf") format('opentype');
                        }
                        .font_fam{
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_purchase_report/static/THSarabun.ttf") format('opentype');
                        font-size: 20px;
                        }
                        table.table-bordered{
                        border:1px solid black;
                        width: 100%;
                        font-family: SarabunPSK;
                        src: local('United'), url("/itaas_print_purchase_report/static/THSarabun.ttf") format('opentype');
                        }
                        table.table-bordered &gt; thead &gt; tr &gt; th{
                        border:1px solid black;
                        padding:3px;
                        }
                        table.table-bordered &gt; thead &gt; tr &gt; td{
                        border:1px solid black;
                        padding:3px;
                        }
                        table.table-bordered &gt; tbody &gt; tr &gt; td{
                        border:1px solid black;
                        padding:3px;
