<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_user_sale_form" model="ir.ui.view">
            <field name="name">res.partner</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='sale']//field[@name='user_id']" position="after">
                    <field name="allowed_user_ids" widget="many2many_tags" options="{'no_create':True}"/>
                </xpath>
            </field>
        </record>

        <act_window id="partner_user_sale_view"
            name="Allow Users to Access Customers"
            res_model="res.partner.allowed"
            binding_model="res.partner"
            binding_type="action"
            view_mode="form"
            binding_views="list,form"
            target="new"
            />

    </data>
</odoo>