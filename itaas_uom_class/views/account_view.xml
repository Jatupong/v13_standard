<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- account.move : inherit views -->
    <record id="view_account_move_form_uom" model="ir.ui.view">
        <field name="name">view.account.mov.form.uom</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_uom_id']" position="before">
                <field name="product_uom_category_id" invisible="1"/>
                <field name="uom_class_ids" groups="uom.group_uom" options="{'no_create': True}" widget="many2many_tags" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_uom_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
                <attribute name="domain">[('id', 'in', uom_class_ids)]</attribute>
            </xpath>

            <xpath expr="//field[@name='line_ids']/tree/field[@name='product_uom_id']" position="before">
                <field name="product_uom_category_id" invisible="1"/>
                <field name="uom_class_ids" groups="uom.group_uom" options="{'no_create': True}" widget="many2many_tags" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='line_ids']/tree/field[@name='product_uom_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
                <attribute name="domain">[('id', 'in', uom_class_ids)]</attribute>
            </xpath>

        </field>
    </record>

</odoo>