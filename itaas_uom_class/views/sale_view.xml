<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- sale.order : inherit views -->
    <record id="view_sale_order_form_uom" model="ir.ui.view">
        <field name="name">view.sale.order.form.uom</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="after">
                <field name="uom_class_ids" groups="uom.group_uom" options="{'no_create': True}" widget="many2many_tags" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
                <attribute name="domain">[('id', 'in', uom_class_ids)]</attribute>
            </xpath>

        </field>
    </record>

</odoo>